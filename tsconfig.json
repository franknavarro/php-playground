{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2023"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "tests/integration/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
